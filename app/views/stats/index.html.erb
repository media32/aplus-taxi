<h1>Stats</h1>

<ul id="submenu">
<li><%= link_to 'New Stat', new_stat_path %></li>
</ul>

<% if @stats.present? %>
<table class="list">
  <tr>
    <th rowspan="2">Date</th>
    <th rowspan="2">Weekday</th>
    <th colspan="4">Day &mdash; Trips</th>
    <th colspan="5">Day &mdash; Drivers</th>
    <th colspan="4">Night &mdash; Trips</th>
    <th colspan="5">Night &mdash; Drivers</th>
    <th colspan="3">Temp</th>
    <th rowspan="2">Holiday</th>
    <th rowspan="2">Notes</th>
    <th rowspan="2"></th>
  </tr>
  <tr>
    <th>T</th>
    <th>LT</th>
    <th>NT</th>
    <th>CA</th>
    <th>Sch</th>
    <th>Act</th>
    <th>Ext</th>
    <th>Lft</th>
    <th>Trips</th>
    <th>T</th>
    <th>LT</th>
    <th>NT</th>
    <th>CA</th>
    <th>Sch</th>
    <th>Act</th>
    <th>Ext</th>
    <th>Lft</th>
    <th>Trips</th>
    <th>Max</th>
    <th>Min</th>
    <th>Mean</th>
  </tr>

<% @stats.each do |s| %>
  <tr>
    <td><%= s.date %></td>
    <td><%= s.date.strftime("%a") if s.date %></td>
    <td class="number"><%= s.day_trips %></td>
    <td class="number"><%= s.day_trips_lt %></td>
    <td class="number"><%= s.day_trips_nt %></td>
    <td class="number"><%= s.day_trips_ca %></td>
    <td class="number"><%= s.day_drivers_sch %></td>
    <td class="number"><%= s.day_drivers_act %></td>
    <td class="number"><%= s.day_drivers_ext %></td>
    <td class="number"><%= s.day_drivers_lft %></td>
    <td class="number"><%= s.day_trips_per_day %></td>
    <td class="number"><%= s.night_trips %></td>
    <td class="number"><%= s.night_trips_lt %></td>
    <td class="number"><%= s.night_trips_nt %></td>
    <td class="number"><%= s.night_trips_ca %></td>
    <td class="number"><%= s.night_drivers_sch %></td>
    <td class="number"><%= s.night_drivers_act %></td>
    <td class="number"><%= s.night_drivers_ext %></td>
    <td class="number"><%= s.night_drivers_lft %></td>
    <td class="number"><%= s.night_trips_per_day %></td>
    <td class="number"><%= s.temp_max %></td>
    <td class="number"><%= s.temp_min %></td>
    <td class="number"><%= s.temp_mean %></td>
    <td><%= image_tag 'yes.png' if s.holidays.present? %></td>
    <td><%= truncate(s.notes) %></td>
    <td><%= link_to "Edit", edit_stat_path(s) if current_user.admin? %></td>
  </tr>
<% end %>
</table>
<% end %>

<%= will_paginate @stats %>
