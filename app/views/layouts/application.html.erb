<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>A-Plus Taxi<%= " - #{@title}" if @title %></title>
<%= stylesheet_link_tag 'base' %>
<%= javascript_include_tag 'jquery.min', 'rails', 'application', :cache => true %>
<%= yield :head %>
<%= csrf_meta_tag %>
</head>
<body>
<div id="header">
  <div id="logo"><a href="/"><img src="/images/logo.png" alt="" width="339" height="90" /></a></div>
  
  <div id="shortcuts">
    <ul>
    <% if current_user %>
      <li><%= link_to 'Logout', logout_path %></li>
    <% else %>
      <li><%= link_to 'Login', login_path %></li>
    <% end %>
    </ul>
  </div>
  
  <% if current_user %>
  <%= render 'layouts/menu_admin' %>
  <% else %>
  <%= render 'layouts/menu' %>
  <% end %>
</div>

<div id="content">
  <% if flash[:notice] %><div id="notice"><span><%= flash[:notice] %></span></div><% end %>
  <%= yield %>
</div>

<div id="footer">
</div>

</body>
</html>
