<h1>Login</h1>

<% unless current_user %>
  <%= form_tag '/session/create' do %>
    <ol>
    <li>
      <%= label_tag :login, "Username" %>
      <%= text_field_tag :login, @login %>
    </li>
    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>
    <li>
      <%= submit_tag 'Login' %>
    </li>
    </ol>
  <% end %>
<% else %>
  <p>Welcome back <%= current_user.name %>.</p>
<% end %>